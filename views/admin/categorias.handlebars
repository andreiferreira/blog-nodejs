
<h2>Lista de categorias</h2>
<a href="/admin/categorias/add/{{_id}}"><button class="btn btn-success">Adicionar categoria</button></a>
<hr>
{{#each categoria}}
    <div class="card">
        <div class="card-body">
            <h3>{{nome}}</h3>
            <p>{{slug}}</p>
            <a href="/admin/categorias/edicao/{{_id}}"><button class="btn btn-success">Editar Categoria</button></a>
            <form action="/admin/categorias/excluir" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
              <button class="btn btn-danger">Apagar Categoria</button>

            </form>
        </div>
     </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria encontrada.</h4>
{{/each}}
